---
import "../styles/global.css";

import BeswanDashboard from "./page";

// SEO Meta Tags for Beswan Dashboard
const title = "Dashboard Pendaftaran - Bersekolah";
const description = "Dashboard untuk mengelola pendaftaran beasiswa dan dokumen persyaratan di platform Bersekolah.";
---

<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/storage/B-only.png" />
    <link rel="shortcut icon" type="image/png" href="/storage/B-only.png" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#406386" />
  </head>
  <body>
    <BeswanDashboard client:load>
      <slot />
    </BeswanDashboard>
  </body>
</html>
