---
import "../styles/global.css";
import AdminDashboard from "./page-admin";

// SEO Meta Tags for Admin
const title = "Admin Dashboard - Bersekolah";
const description = "Dashboard administrasi untuk mengelola platform beasiswa dan donasi pendidikan Bersekolah.";
---

<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/storage/B-only.png" />
    <link rel="shortcut icon" type="image/png" href="/storage/B-only.png" />
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#406386" />
  </head>
  <body>
    <AdminDashboard client:visible>
      <slot />
    </AdminDashboard>
  </body>
</html>
