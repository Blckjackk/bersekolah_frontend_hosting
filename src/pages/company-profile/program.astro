---
import Navbar from "../../component/Header";
import AppLayout from "../../layout/app-layout.astro";
---

<AppLayout>
  <!-- Hero Section -->

  <!-- Hero Banner -->
    <section class="relative flex items-center justify-center min-h-screen overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-slate-900/95 via-[#406386]/90 to-[#406386]/85"></div>
        <div 
            class="absolute inset-0 bg-center bg-no-repeat bg-cover opacity-30" 
            style="background-image: url('assets/image/hero/hero-beasiswa.jpg');"
        ></div>

        <div class="container relative z-10 px-4 mx-auto text-center text-white sm:px-6 lg:px-8">
            <div class="max-w-5xl mx-auto">
                <h1 class="mb-4 text-xl font-bold leading-tight sm:text-2xl md:text-3xl lg:text-4xl xl:text-5xl sm:mb-6 lg:mb-8">
                    Program Beasiswa 
                    <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-cyan-300 to-blue-200 sm:mt-2">
                        Bersekolah
                    </span>
                </h1>
                <p class="max-w-4xl mx-auto mb-6 text-sm font-light leading-relaxed sm:text-base md:text-lg lg:text-xl opacity-90 sm:mb-8 lg:mb-10">
                    Memberikan kesempatan pendidikan yang lebih baik tingkat SMP, SMA, dan SMK/SMK yang memiliki semangat tinggi untuk bersekolah.
                </p>
                <div class="mb-6 sm:mb-8 lg:mb-10">
                    <div class="max-w-2xl px-2 py-4 mx-auto sm:px-4 sm:py-6">
                        <h3 class="mb-4 text-base font-bold text-center text-white sm:text-lg lg:text-xl sm:mb-6">
                            Pendaftaran Ditutup Dalam:
                        </h3>
                        <div id="countdown-container" class="flex items-center justify-center">
                            <!-- Loading State -->
                            <div class="flex flex-col items-center p-4 countdown-loading sm:p-6">
                                <div class="w-6 h-6 mb-2 border-t-2 border-r-2 border-blue-300 rounded-full animate-spin sm:w-8 sm:h-8"></div>
                                <p class="text-xs text-white sm:text-sm">Memuat data periode...</p>
                            </div>
                            
                            <!-- Active Countdown Display -->
                            <div class="hidden countdown-display">
                                <div class="flex items-center justify-center space-x-1 sm:space-x-2 lg:space-x-4">
                                    <!-- Days -->
                                    <div class="flex flex-col items-center">
                                        <div class="flex items-center justify-center w-10 h-10 border-2 border-blue-100 rounded-lg shadow-lg bg-white/90 backdrop-blur-sm sm:w-14 sm:h-14 lg:w-16 lg:h-16 sm:rounded-xl">
                                            <span id="days" class="text-sm sm:text-lg lg:text-2xl font-bold text-[#406386]">00</span>
                                        </div>
                                        <span class="mt-1 text-xs font-medium text-white sm:text-sm">Hari</span>
                                    </div>
                                    
                                    <!-- Separator -->
                                    <div class="flex flex-col items-center justify-center text-sm font-bold text-white sm:text-lg lg:text-xl">
                                        <div class="flex items-center h-10 sm:h-14 lg:h-16">:</div>
                                        <div class="h-2 mt-1 sm:h-3 sm:mt-1"></div>
                                    </div>
                                    
                                    <!-- Hours -->
                                    <div class="flex flex-col items-center">
                                        <div class="flex items-center justify-center w-10 h-10 border-2 border-blue-100 rounded-lg shadow-lg bg-white/90 backdrop-blur-sm sm:w-14 sm:h-14 lg:w-16 lg:h-16 sm:rounded-xl">
                                            <span id="hours" class="text-sm sm:text-lg lg:text-2xl font-bold text-[#406386]">00</span>
                                        </div>
                                        <span class="mt-1 text-xs font-medium text-white sm:text-sm">Jam</span>
                                    </div>
                                    
                                    <!-- Separator -->
                                    <div class="flex flex-col items-center justify-center text-sm font-bold text-white sm:text-lg lg:text-xl">
                                        <div class="flex items-center h-10 sm:h-14 lg:h-16">:</div>
                                        <div class="h-2 mt-1 sm:h-3 sm:mt-1"></div>
                                    </div>
                                    
                                    <!-- Minutes -->
                                    <div class="flex flex-col items-center">
                                        <div class="flex items-center justify-center w-10 h-10 border-2 border-blue-100 rounded-lg shadow-lg bg-white/90 backdrop-blur-sm sm:w-14 sm:h-14 lg:w-16 lg:h-16 sm:rounded-xl">
                                            <span id="minutes" class="text-sm sm:text-lg lg:text-2xl font-bold text-[#406386]">00</span>
                                        </div>
                                        <span class="mt-1 text-xs font-medium text-white sm:text-sm">Menit</span>
                                    </div>
                                    
                                    <!-- Separator -->
                                    <div class="flex flex-col items-center justify-center text-sm font-bold text-white sm:text-lg lg:text-xl">
                                        <div class="flex items-center h-10 sm:h-14 lg:h-16">:</div>
                                        <div class="h-2 mt-1 sm:h-3 sm:mt-1"></div>
                                    </div>
                                    
                                    <!-- Seconds -->
                                    <div class="flex flex-col items-center">
                                        <div class="flex items-center justify-center w-10 h-10 border-2 border-blue-100 rounded-lg shadow-lg bg-white/90 backdrop-blur-sm sm:w-14 sm:h-14 lg:w-16 lg:h-16 sm:rounded-xl">
                                            <span id="seconds" class="text-sm sm:text-lg lg:text-2xl font-bold text-[#406386]">00</span>
                                        </div>
                                        <span class="mt-1 text-xs font-medium text-white sm:text-sm">Detik</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Expired Registration State -->
                            <div class="hidden countdown-expired">
                                <div class="px-4 py-3 border-2 border-red-100 rounded-lg shadow-lg bg-white/90 backdrop-blur-sm sm:px-6 sm:py-4 sm:rounded-xl">
                                    <div class="flex items-center space-x-2 sm:space-x-3">
                                        <svg class="w-5 h-5 text-red-500 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <p class="text-[#406386] font-bold text-sm sm:text-base lg:text-lg">Pendaftaran telah ditutup</p>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Error State -->
                            <div class="hidden countdown-error">
                                <div class="px-4 py-3 border-2 border-red-100 rounded-lg shadow-lg bg-white/90 backdrop-blur-sm sm:px-6 sm:py-4 sm:rounded-xl">
                                    <div class="flex items-center space-x-2 sm:space-x-3">
                                        <svg class="w-5 h-5 text-red-500 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                        </svg>
                                        <p class="text-sm font-bold text-red-600 sm:text-base lg:text-lg">Tidak ada periode aktif</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- CTA Button -->
                <div class="flex justify-center mt-8 sm:mt-10 lg:mt-12">
                    <a href="/daftar" class="inline-block group">
                        <button class="bg-white text-[#406386] px-6 sm:px-8 lg:px-10 py-3 sm:py-4 lg:py-4 rounded-full font-semibold text-sm sm:text-base lg:text-lg hover:bg-blue-50 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5">
                            Daftar Sekarang
                        </button>
                    </a>
                </div>
                
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        // Type casting DOM elements to avoid null warnings
                        const countdownLoading = document.querySelector('.countdown-loading') as HTMLElement | null;
                        const countdownDisplay = document.querySelector('.countdown-display') as HTMLElement | null;
                        const countdownExpired = document.querySelector('.countdown-expired') as HTMLElement | null;
                        const countdownError = document.querySelector('.countdown-error') as HTMLElement | null;
                        
                        const daysElement = document.getElementById('days') as HTMLElement | null;
                        const hoursElement = document.getElementById('hours') as HTMLElement | null;
                        const minutesElement = document.getElementById('minutes') as HTMLElement | null;
                        const secondsElement = document.getElementById('seconds') as HTMLElement | null;
                        
                        // Safety check for DOM elements
                        if (!countdownLoading || !countdownDisplay || !countdownExpired || !countdownError ||
                            !daysElement || !hoursElement || !minutesElement || !secondsElement) {
                            console.error('Required DOM elements not found for countdown');
                            return;
                        }
                        
                        // Type definitions for API response
                        interface BeasiswaPeriod {
                            id: number;
                            tahun: number;
                            nama_periode: string;
                            deskripsi: string;
                            mulai_pendaftaran: string;
                            akhir_pendaftaran: string;
                            mulai_beasiswa: string;
                            akhir_beasiswa: string;
                            status: 'draft' | 'active' | 'closed';
                            is_active: boolean;
                        }
                        
                        interface BeasiswaPeriodsResponse {
                            success: boolean;
                            message: string;
                            data: BeasiswaPeriod[];
                        }
                        
                        // API endpoint for beasiswa periods data
                        const API_URL = `${import.meta.env.PUBLIC_API_BASE_URL || 'https://api.bersekolah.com/api'}/public/beasiswa-periods`;
                        
                        // Fetch beasiswa periods data from API
                        fetch(API_URL)
                            .then(response => {
                                if (!response.ok) {
                                    throw new Error(`Network response was not ok: ${response.status} ${response.statusText}`);
                                }
                                return response.json() as Promise<BeasiswaPeriodsResponse>;
                            })
                            .then((data: BeasiswaPeriodsResponse) => {
                                console.log('Beasiswa periods data:', data);
                                
                                // Hide loading indicator
                                countdownLoading.classList.add('hidden');
                                
                                // Check if we have data and periods
                                if (!data || !data.data || data.data.length === 0) {
                                    countdownError.classList.remove('hidden');
                                    return;
                                }
                                
                                // Find active period - more flexible logic
                                console.log('All periods:', data.data);
                                console.log('Looking for active period...');
                                
                                // Try different combinations to find active period
                                let activePeriod = data.data.find(period => {
                                    console.log(`Period ${period.id}: status=${period.status}, is_active=${period.is_active}`);
                                    return period.status === 'active' && period.is_active === true;
                                });
                                
                                // If no exact match, try more flexible criteria
                                if (!activePeriod) {
                                    console.log('No exact match found, trying flexible criteria...');
                                    
                                    // Try: status=active OR is_active=true
                                    activePeriod = data.data.find(period => {
                                        return period.status === 'active' || period.is_active === true;
                                    });
                                    
                                    console.log('Found period with flexible criteria:', activePeriod);
                                }
                                
                                console.log('Final active period:', activePeriod);
                                
                                if (!activePeriod) {
                                    console.log('No active period found, showing error');
                                    countdownError.classList.remove('hidden');
                                    return;
                                }
                                
                                // Extract end date from active period
                                const endDateStr = activePeriod.akhir_pendaftaran;
                                if (!endDateStr) {
                                    console.error('No end date provided in active period');
                                    countdownError.classList.remove('hidden');
                                    return;
                                }
                                
                                const endDate = new Date(endDateStr);
                                
                                // Check if end date is valid
                                if (isNaN(endDate.getTime())) {
                                    console.error('Invalid end date:', endDateStr);
                                    countdownError.classList.remove('hidden');
                                    return;
                                }
                                
                                // Check if registration has already ended
                                const now = new Date();
                                if (now >= endDate) {
                                    countdownExpired.classList.remove('hidden');
                                    return;
                                }
                                
                                // Initialize countdown
                                updateCountdown(endDate);
                                
                                // Update countdown every second
                                const interval = setInterval(() => {
                                    updateCountdown(endDate);
                                }, 1000);
                                
                                // Cleanup on page unload
                                window.addEventListener('beforeunload', () => {
                                    clearInterval(interval);
                                });
                            })
                            .catch(error => {
                                console.error('Error fetching countdown data:', error);
                                if (countdownLoading && countdownError) {
                                    countdownLoading.classList.add('hidden');
                                    countdownError.classList.remove('hidden');
                                }
                            });
                        
                        
                        // Calculate and update countdown based on end date
                        function updateCountdown(endDate: Date): void {
                            const now = new Date().getTime();
                            const timeRemaining = endDate.getTime() - now;
                            
                            if (timeRemaining <= 0) {
                                // Countdown has expired
                                if (countdownDisplay && countdownExpired) {
                                    countdownDisplay.classList.add('hidden');
                                    countdownExpired.classList.remove('hidden');
                                }
                                return;
                            }
                            
                            // Show countdown display
                            if (countdownDisplay) {
                                countdownDisplay.classList.remove('hidden');
                            }
                            
                            // Calculate time units
                            const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 24));
                            const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                            const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
                            const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);
                            
                            // Update with calculated values
                            updateCountdownDisplay(days, hours, minutes, seconds);
                        }
                        
                        // Helper function to update countdown display
                        function updateCountdownDisplay(days: number, hours: number, minutes: number, seconds: number): void {
                            // Helper function for padding numbers
                            function padNumber(num: number): string {
                                return num < 10 ? '0' + num : num.toString();
                            }
                            
                            // Update DOM elements with leading zeros
                            if (daysElement) daysElement.textContent = padNumber(days);
                            if (hoursElement) hoursElement.textContent = padNumber(hours);
                            if (minutesElement) minutesElement.textContent = padNumber(minutes);
                            if (secondsElement) secondsElement.textContent = padNumber(seconds);
                            
                            // Add animation effect
                            const elements = [daysElement, hoursElement, minutesElement, secondsElement];
                            elements.forEach(el => {
                                if (el) {
                                    el.classList.add('countdown-pulse');
                                    setTimeout(() => {
                                        el.classList.remove('countdown-pulse');
                                    }, 500);
                                }
                            });
                        }
                    });
                </script>
                  <style>
                    /* Add animation for countdown */
                    @keyframes countdown-pulse {
                        0% { transform: scale(1); }
                        50% { transform: scale(1.05); }
                        100% { transform: scale(1); }
                    }
                    
                    .countdown-pulse {
                        animation: countdown-pulse 0.5s ease-in-out;
                    }
                    
                    /* Glow effect for countdown boxes */
                    #countdown-container .bg-white\/90 {
                        transition: all 0.3s ease-in-out;
                        box-shadow: 0 4px 20px rgba(64, 99, 134, 0.2);
                    }
                    
                    #countdown-container .bg-white\/90:hover {
                        box-shadow: 0 8px 25px rgba(64, 99, 134, 0.3);
                        transform: translateY(-2px);
                    }
                    
                    /* Pulse animation for seconds */
                    @keyframes seconds-pulse {
                        0% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.4); }
                        70% { box-shadow: 0 0 0 10px rgba(255, 255, 255, 0); }
                        100% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
                    }
                    
                    #seconds {
                        animation: seconds-pulse 2s infinite;
                    }
                    
                    /* Make the countdown responsive on small screens */
                    @media (max-width: 640px) {
                        #countdown-container .space-x-2 {
                            gap: 0.25rem;
                        }
                        
                        #countdown-container .space-x-1 {
                            gap: 0.125rem;
                        }
                    }
                </style>
            </div>
        </div>
    </section>

